<!DOCTYPE html>
<html>
  <head>
    <title>Application</title>
  </head>
  <body>
    <p><b>Hello</b> <%= username %></p>
    <p><%= post %></p>
    <% if(likes.length > 0) { %>
      <p>Liked this post: 
        <% likes.forEach(function(like) {%>
           <%= like.info.screenName %> 
        <% }) %>
      </p>
    <% } %>
    <% if(comments.length > 0) { %>
      <p>Comments: </p>
      <ul>
        <% comments.forEach(function(comment) {%>
           <li><%= comment.body %> - <%= comment.createdBy.info.screenName %></li>
        <% }) %>
      </ul>
    <% } %>
  </body>
</html>